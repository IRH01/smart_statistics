<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <!-- 前端页面模板 -->
    <definition name="template_main" template="/WEB-INF/view/template/main.jsp">
        <put-attribute name="header" value="/WEB-INF/view/template/header.jsp"/>
        <put-attribute name="menu" value="/WEB-INF/view/template/menu.jsp"/>
        <put-attribute name="body" value="/WEB-INF/view/template/body.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/view/template/footer.jsp"/>
        <put-attribute name="firstNav" value=""/>
        <put-attribute name="secondNav" value=""/>
    </definition>
    
    <!-- 引用整体模板 视图名 + .main -->
    <definition name="*.main" extends="template_main">
        <put-attribute name="body" value="/WEB-INF/view/views/{1}.jsp"/>
    </definition>
    <definition name="*/*.main" extends="template_main">
        <put-attribute name="body" value="/WEB-INF/view/views/{1}/{2}.jsp"/>
    </definition>
    <definition name="*/*/*.main" extends="template_main">
        <put-attribute name="body" value="/WEB-INF/view/views/{1}/{2}/{3}.jsp"/>
    </definition>
    <definition name="*/*/*/*.main" extends="template_main">
        <put-attribute name="body" value="/WEB-INF/view/views/{1}/{2}/{3}/{4}.jsp"/>
    </definition>
    <definition name="*/*/*/*/*.main" extends="template_main">
        <put-attribute name="body" value="/WEB-INF/view/views/{1}/{2}/{3}/{4}/{5}.jsp"/>
    </definition>
    <definition name="*/*/*/*/*/*.main" extends="template_main">
        <put-attribute name="body" value="/WEB-INF/view/views/{1}/{2}/{3}/{4}/{5}/{6}.jsp"/>
    </definition>

    <!--登陆 -->
    <definition name="login" template="/WEB-INF/view/views/login/login.jsp"/>
    <definition name="forgetPassWord" template="/WEB-INF/view/views/login/passwordget.jsp"/>
    <definition name="validateResetPassWord" template="/WEB-INF/view/views/login/resetPassword.jsp"/>
    <definition name="successResetPassWord" template="/WEB-INF/view/views/login/successReset.jsp"/>
    <definition name="main" extends="template_main"/>
</tiles-definitions>