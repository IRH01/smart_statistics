<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hhly.smartdata.mapper.authentication.MenuMapper">

    <resultMap id="BaseResultMap" type="com.hhly.smartdata.model.authentication.Menu">
        <id column="id" property="id"/>
        <result column="permission" property="permission"/>
        <result column="parent_id" property="parentId"/>
        <result column="name" property="name"/>
        <result column="url" property="url"/>
        <result column="menu_index" property="index"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, permission, parent_id, name, url, menu_index, create_time
    </sql>

    <sql id="where_condition">
        <where>
            <if test="id != null">
                and id= #{id}
            </if>
            <if test="permission != null">
                and permission = #{permission}
            </if>
            <if test="parentId != null">
                and parent_id = #{parentId}
            </if>
            <if test="name != null">
                and name = #{name}
            </if>
            <if test="url != null">
                and url = #{url}
            </if>
            <if test="index != null">
                and menu_index = #{index}
            </if>
        </where>
    </sql>

    <select id="getMenuByPerms" resultType="com.hhly.smartdata.model.authentication.Menu"
            parameterType="list">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        tbl_menu
        WHERE permission IS NULL
        OR permission IN
        <foreach collection="list" open="(" close=")" separator="," item="perm">
            #{perm}
        </foreach>
        ORDER BY parent_id,menu_index
    </select>

    <select id="searchMenu" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from tbl_menu
        <include refid="where_condition"/>
        order by parent_id,menu_index
    </select>

    <delete id="delete" parameterType="com.hhly.smartdata.model.authentication.Menu">
        delete from tbl_menu
        <include refid="where_condition"/>
    </delete>

    <delete id="delById">
        delete from tbl_menu
        where id=#{id}
    </delete>

    <insert id="insert" parameterType="com.hhly.smartdata.model.authentication.Menu" useGeneratedKeys="true" keyProperty="id">
        insert into tbl_menu
        (
        permission,
        parent_id,
        name,
        url,
        menu_index
        )
        values (
        #{permission},
        #{parentId},
        #{name},
        #{url},
        #{index}
        )
    </insert>

    <update id="update">
        update tbl_menu
        <set>
            <if test="permission != null ">
                permission = #{permission},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="name != null  ">
                name = #{name},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
            <if test="index != null">
                menu_index = #{index},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>