	<insert id="insert" parameterType="com.hhly.smartdata.model.authentication.Admin" useGeneratedKeys="true" keyProperty="id">
		
		insert into tbl_admin 
		( 
		 user_id,
		 name,
		 email, 
		 tel, 
		 job_no, 
		 type)
		values 
		(
		 #{userId},
		 #{name},
		 #{email}, 
		 #{tel}, 
		 #{jobNo}, 
		 #{type})
	</insert>

	<update id="update" parameterType="com.hhly.smartdata.model.authentication.Admin">
		update tbl_admin
		<set>
			<if test="userId != null">
				user_id = #{userId},
			</if>
			<if test="name != null">
				name = #{name},
			</if>
			<if test="email != null">
				email = #{email},
			</if>
			<if test="tel != null">
				tel = #{tel},
			</if>
			<if test="departId != null">
				depart_id = #{departId},
			</if>
			<if test="jobNo != null">
				job_no = #{jobNo},
			</if>
			<if test="type != null">
				type = #{type},
			</if>
		</set>
		where id = #{id}
	</update>

</mapper>