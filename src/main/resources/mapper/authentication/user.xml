	<insert id="insert" parameterType="com.hhly.smartdata.model.authentication.User"
		useGeneratedKeys="true" keyProperty="user_id">
		INSERT INTO tbl_user (
		username,
		password,
		user_status,
		user_type
		)
		VALUES
		(
		#{username},
		#{password},
		#{userStatus},
		#{userType}
		)
	</insert>

	<update id="update" parameterType="com.hhly.smartdata.model.authentication.User">
		update tbl_user
		<set>
			<if test="username != null and username != ''">
				username = #{username},
			</if>
			<if test="userStatus != null">
				user_status = #{userStatus},
			</if>
			<if test="password != null">
				password = #{password},
			</if>
			<if test="userType != null">
				user_type = #{userType},
			</if>
			<if test="locale != null">
				locale = #{locale},
			</if>
		</set>
		where user_id = #{userId}
	</update>
