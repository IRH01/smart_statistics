<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="baseUser">
	<resultMap id="UserMap" type="com.hhly.smartdata.model.authentication.User">
		<id column="user_id" property="userId" />
		<result column="username" property="username" />
		<result column="password" property="password" />
		<result column="user_status" property="userStatus" />
		<result column="user_type" property="userType" />
		<result column="create_time" property="createTime" />
		<result column="locale" property="locale" />
	</resultMap>
	<sql id="User_Base_Column_List">
		user_id,
		username,
		password,
		user_status,
		user_type,
		create_time,
		locale
	</sql>
	<sql id="where_condition">
		<where>
			 and   user_id != -1
			<if test="user_id != null">
				and user_id = #{userId}
			</if>
			<if test="username != null and username != ''">
				and username = #{username}
			</if>
			<if test="password != null">
				and password = #{password}
			</if>
			<if test="type != null">
				and user_type = #{userType}
			</if>
			<if test="status != null">
				and user_status = #{userStatus}
			</if>
		</where>
	</sql>
	<select id="getByUsername" resultMap="UserMap"
		parameterType="string">
		select
		<include refid="User_Base_Column_List" />
		from tbl_user
		where username = #{username}
	</select>
	<select id="getUser" resultMap="UserMap" parameterType="java.lang.Integer">
		select
		<include refid="User_Base_Column_List" />
		from tbl_user
		where user_id = #{userId}
	</select>
	<select id="searchUsers" resultMap="UserMap"
		parameterType="com.hhly.smartdata.model.authentication.User">
		select
		<include refid="User_Base_Column_List" />
		from tbl_user
		<include refid="where_condition" />
	</select>
	<delete id="delete" parameterType="java.lang.Integer">
		DELETE
		FROM
		tbl_user
		WHERE user_id = #{userId}
	</delete>
