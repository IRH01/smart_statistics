<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="baseFunction">
	<resultMap id="BaseResultMap" type="com.hhly.smartdata.model.authentication.Function">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="parent_id" property="parentId" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="index" property="function_index" jdbcType="INTEGER" />
	</resultMap>
	<sql id="Base_Column_List">
		id, parent_id, name, function_index
	</sql>
	<sql id="where_condition">
		<where>
			<if test="parentId != null">
				and parent_id = #{parentId,jdbcType=INTEGER}
			</if>
			<if test="name != null">
				and name = #{name,jdbcType=VARCHAR}
			</if>
			<if test="index != null">
				and function_index = #{index,jdbcType=INTEGER}
			</if>
		</where>
	</sql>
	<select id="search" resultMap="BaseResultMap"
		parameterType="com.hhly.smartdata.model.authentication.Function">
		select
		<include refid="Base_Column_List" />
		from
		tbl_function
		<include refid="where_condition" />
		order by parent_id,function_index
	</select>
	<select id="get" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from
		tbl_function
		where id = #{id,jdbcType=INTEGER}
	</select>

	<select id="getAll" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from
		tbl_function
	</select>

	<select id="queryByRole" resultMap="BaseResultMap"
		parameterType="list">
		select
		c.id ,
		c.parent_id ,
		c.name ,
		c.function_index
		from tbl_role_permission a , tbl_permission b , tbl_function c
		where a.permission=b.permission
		and c.id=b.function_id
		and a.role_id in
		<foreach collection="list" item="id" separator="," open="("
			close=")">
			#{id}
		</foreach>
		GROUP BY c.id ,c.parent_id,c.NAME,c.function_index
	</select>


	<delete id="batchDelete" parameterType="list">
		delete from tbl_function
		where id in
		<foreach collection="list" open="(" close=")" separator=","
			item="id">
			#{id}
		</foreach>
	</delete>
	<delete id="delete" parameterType="int">
		delete
		from
		tbl_function
		where
		id = #{id,jdbcType=INTEGER}
	</delete>
