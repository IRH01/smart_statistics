	<insert id="insert" parameterType="com.hhly.smartdata.model.authentication.Function"
		useGeneratedKeys="true" keyProperty="id">
		insert into tbl_function (parent_id, name,
		function_index)
		values (
		 #{parentId,jdbcType=INTEGER}, 
		 #{name,jdbcType=VARCHAR},
		 #{index,jdbcType=INTEGER})
	</insert>

	<update id="update" parameterType="com.hhly.smartdata.model.authentication.Function">
		update tbl_function
		<set>
			<if test="parentId != null">
				parent_id = #{parentId,jdbcType=INTEGER},
			</if>
			<if test="name != null">
				name = #{name,jdbcType=VARCHAR},
			</if>
			<if test="index != null">
				function_index = #{index,jdbcType=INTEGER},
			</if>
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>

</mapper>