<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hhly.smartdata.mapper.authentication.PermissionMapper">

    <resultMap id="BaseResultMap" type="com.hhly.smartdata.model.authentication.Permission">
        <id column="permission" property="permission" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="function_id" property="functionId" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">permission, name, function_id,
        create_time
    </sql>

    <sql id="where_conditions">
        <where>
            <if test="permission != null">
                and permission = #{permission,jdbcType=VARCHAR}
            </if>
            <if test="name != null">
                and name = #{name,jdbcType=VARCHAR}
            </if>
            <if test="functionId != null">
                and function_id = #{functionId,jdbcType=INTEGER}
            </if>
        </where>
    </sql>

    <select id="queryByRole" resultMap="BaseResultMap"
            parameterType="list">
        select
        b.permission ,
        b.name ,
        b.function_id ,
        b.create_time
        from tbl_role_permission a , tbl_permission b
        where a.permission=b.permission
        and a.role_id in
        <foreach collection="list" item="id" separator="," open="("
                 close=")">
            #{id}
        </foreach>
        group by b.permission , b.name , b.function_id , b.create_time
    </select>

    <select id="get" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from
        tbl_permission
        where
        permission = #{permission}
    </select>

    <select id="getAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from
        tbl_permission
    </select>

    <select id="searchPerms" resultMap="BaseResultMap"
            parameterType="com.hhly.smartdata.model.authentication.Permission">
        select
        <include refid="Base_Column_List"/>
        from
        tbl_permission
        <include refid="where_conditions"/>
    </select>

    <delete id="delete" parameterType="com.hhly.smartdata.model.authentication.Permission">
        DELETE
        FROM
        tbl_permission
        <include refid="where_conditions"/>
    </delete>

    <insert id="insert" parameterType="com.hhly.smartdata.model.authentication.Permission">
        INSERT INTO tbl_permission (
        permission,
        NAME,
        function_id
        )
        VALUES
        (#{permission,jdbcType=VARCHAR}, #{name,jdbcType=VARCHAR},
        #{functionId,jdbcType=INTEGER})
    </insert>

    <update id="update" parameterType="com.hhly.smartdata.model.authentication.Permission">
        update tbl_permission
        <set>

            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="functionId != null">
                function_id = #{functionId,jdbcType=INTEGER},
            </if>
        </set>
        where permission = #{permission,jdbcType=INTEGER}
    </update>
</mapper>