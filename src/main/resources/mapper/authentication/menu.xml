    <insert id="insert" parameterType="com.hhly.smartdata.model.authentication.Menu"
            useGeneratedKeys="true" keyProperty="id">
        insert into tbl_menu
        (
        permission,
        parent_id,
        name,
        url,
        menu_index
        )
        values (
        #{permission,jdbcType=VARCHAR},
        #{parentId,jdbcType=INTEGER},
        #{name,jdbcType=VARCHAR},
        #{url,jdbcType=VARCHAR},
        #{index,jdbcType=INTEGER}
        )
    </insert>

    <update id="update" parameterType="com.hhly.smartdata.model.authentication.Menu">
        update tbl_menu
        <set>
            <if test="permission != null ">
                permission = #{permission},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="name != null  ">
                name = #{name},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
            <if test="index != null">
                menu_index = #{index},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>
