<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="userChannel">
	<resultMap id="UserChannelMap" type="com.hhly.smartdata.model.authentication.UserChannel">
		<id column="id" property="id" />
		<result column="user_id" property="userId" />
		<result column="channel_id" property="channelId" />
	</resultMap>

	<select id="getByUserId" resultMap="UserChannelMap" parameterType="java.lang.Integer">
		select
			id,
			user_id,
			channel_id
		from tbl_user_channel
		where user_id = #{userId}
	</select>
	<delete id="deleteByUserId" parameterType="java.lang.Integer">
		delete from tbl_user_channel
		where user_id = #{userId}
	</delete>
	<insert id="batchAdd" parameterType="java.util.List" useGeneratedKeys="false">
		insert into tbl_user_channel (
		user_id,
		channel_id
		)
		<foreach collection="list" item="item" index="index" separator="union all" > 
			(select  
			#{item.userId,jdbcType=INTEGER}, 
			#{item.channelId,jdbcType=VARCHAR}
			from dual)
		</foreach>
	</insert>
</mapper>