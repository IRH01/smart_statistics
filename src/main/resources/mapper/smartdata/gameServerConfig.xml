<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="gameServerConfig">
	<resultMap type="GameServerConfig" id="GameServerConfigMap">
		<result property="id" column="id"/>
		<result property="name" column="name"/>
		<result property="areaId" column="area_id"/>
		<result property="areaName" column="area_name"/>
	</resultMap>
	
	<select id="getByPlatformId" resultMap="GameServerConfigMap" parameterType="int">
		select 
			s.id,
			s.name,
			s.area_id,
			a.name area_name
		from gp_tbl_game_server_config s
		left join gp_tbl_game_area_config a
			on s.area_id = a.id
		where 1=1
			and a.platform_id = #{platformId}
	</select>
</mapper>