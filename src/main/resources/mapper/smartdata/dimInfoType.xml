<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="dimInfoType">
    <resultMap id="DimInfoTypeMap" type="DimInfoType">
        <id column="tblId" property="tbl_id"/>
        <result column="typeId" property="type_id"/>
        <result column="typeName" property="type_name"/>
        <result column="createdDate" property="created_date"/>
        <result column="createdUser" property="created_user"/>
        <result column="updatedDate" property="updated_date"/>
        <result column="updatedUser" property="updated_user"/>
    </resultMap>

    <sql id="Base_Column_List">
        tbl_id,
        type_id,
        type_name,
        created_date,
        created_user,
        updated_date,
        updated_user
    </sql>

    <select id="get" resultMap="DimInfoTypeMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from tbl_dw_dim_info_type
        where tbl_id = #{tblId}
    </select>

    <resultMap type="com.hhly.smartdata.dto.InfoTypeDto" id="getAllMapper">
        <result column="tbl_id" property="tblId"></result>
        <result column="type_id" property="typeId"></result>
        <result column="type_name" property="typeName"></result>
    </resultMap>

    <select id="getAll" parameterType="map" resultMap="getAllMapper">
        select distinct(t.tbl_id),t.type_id,t.type_name
        from tbl_dw_dim_info_type t
        join tbl_dm_add_info_stat_d d on (d.info_type_id = t.tbl_id)

        <if test="domain != null">
            and domain_id = #{domain}
        </if>
        <if test="date != null">
            and date_format(etl_date,'%Y-%m-%d') = #{date}
        </if>

    </select>
</mapper>