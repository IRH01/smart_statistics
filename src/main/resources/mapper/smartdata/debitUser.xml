<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="debitUser">
    <resultMap type="DebitUser" id="DebitUserMap" extends="lossDaily.LossDailyMap">
        <result property="userId" column="USER_ID"/>
        <result property="nickName" column="NICKNAME"/>
        <result property="lybCnt" column="LYB_CNT"/>
        <result property="lyqCnt" column="LYQ_CNT"/>
        <result property="djbCnt" column="DJB_CNT"/>
        <result property="dzbCnt" column="DZB_CNT"/>
    </resultMap>

    <select id="find" resultMap="DebitUserMap" parameterType="map">
        select
        user_id,
        nickname,
        FORMAT(lyb_cnt,2) as LYB_CNT,
        FORMAT(lyq_cnt,2) as LYQ_CNT,
        FORMAT(djb_cnt,2) as DJB_CNT,
        FORMAT(dzb_cnt,2) as DZB_CNT
        from view_user_account_info
        where 1=1
        <if test="userId1 != null and userId1 != ''">and user_id like CONCAT(CONCAT('%',#{userId1}),'%')</if>
        <if test="nickName != null and nickName != ''">and nickname like CONCAT(CONCAT('%',#{nickName}),'%')</if>
    </select>

    <select id="count" resultType="int" parameterType="map">
        select
        count(1)
        from view_user_account_info
        where 1=1
        <if test="userId1 != null and userId1 != ''">and user_id like CONCAT(CONCAT('%',#{userId1}),'%')</if>
        <if test="nickName != null and nickName != ''">and nickname like CONCAT(CONCAT('%',#{nickName}),'%')</if>
    </select>
</mapper>