<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="countryInfo">
    <resultMap type="CountryInfo" id="CountryInfoMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>

    <!-- 获取已存在游戏的国家 -->
    <select id="getExistDataCountryInfo" resultMap="CountryInfoMap">
        select
        distinct(p.country) id,
        c.name
        from gp_tbl_platform_info p
        left join gp_tbl_country_info c
        on c.id=p.country
        order by id asc
    </select>
</mapper>