<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="jedisPoolConfig" class="redis.clients.jedis.JedisPoolConfig">
        <property name="maxTotal" value="1000"/>
        <property name="maxIdle" value="10"/>
        <property name="minIdle" value="1"/>
        <property name="maxWaitMillis" value="30000"/>
        <property name="testOnBorrow" value="true"/>
        <property name="testOnReturn" value="true"/>
        <property name="testWhileIdle" value="true"/>
    </bean>

    <bean id="shardedJedisPool" class="redis.clients.jedis.ShardedJedisPool" destroy-method="destroy">
        <constructor-arg ref="jedisPoolConfig"/>
        <constructor-arg>
            <list>
                <bean class="redis.clients.jedis.JedisShardInfo">
                    <constructor-arg index="0" value="192.168.1.10"/>
                    <constructor-arg index="1" value="7000"/>
                    <constructor-arg index="2" value="instance:01"/>
                </bean>
                <bean class="redis.clients.jedis.JedisShardInfo">
                    <constructor-arg index="0" value="192.168.1.10"/>
                    <constructor-arg index="1" value="7001"/>
                    <constructor-arg index="2" value="instance:02"/>
                </bean>
                <bean class="redis.clients.jedis.JedisShardInfo">
                    <constructor-arg index="0" value="192.168.1.10"/>
                    <constructor-arg index="1" value="7002"/>
                    <constructor-arg index="2" value="instance:03"/>
                </bean>
                <bean class="redis.clients.jedis.JedisShardInfo">
                    <constructor-arg index="0" value="192.168.1.12"/>
                    <constructor-arg index="1" value="7000"/>
                    <constructor-arg index="2" value="instance:04"/>
                </bean>
                <bean class="redis.clients.jedis.JedisShardInfo">
                    <constructor-arg index="0" value="192.168.1.12"/>
                    <constructor-arg index="1" value="7001"/>
                    <constructor-arg index="2" value="instance:05"/>
                </bean>
                <bean class="redis.clients.jedis.JedisShardInfo">
                    <constructor-arg index="0" value="192.168.1.12"/>
                    <constructor-arg index="1" value="7002"/>
                    <constructor-arg index="2" value="instance:06"/>
                </bean>
                <bean class="redis.clients.jedis.JedisShardInfo">
                    <constructor-arg index="0" value="192.168.1.13"/>
                    <constructor-arg index="1" value="7000"/>
                    <constructor-arg index="2" value="instance:07"/>
                </bean>
                <bean class="redis.clients.jedis.JedisShardInfo">
                    <constructor-arg index="0" value="192.168.1.13"/>
                    <constructor-arg index="1" value="7001"/>
                    <constructor-arg index="2" value="instance:08"/>
                </bean>
                <bean class="redis.clients.jedis.JedisShardInfo">
                    <constructor-arg index="0" value="192.168.1.13"/>
                    <constructor-arg index="1" value="7002"/>
                    <constructor-arg index="2" value="instance:09"/>
                </bean>
            </list>
        </constructor-arg>
    </bean>

